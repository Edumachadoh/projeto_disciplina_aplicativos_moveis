<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="15dp">

                <TextView
                    android:id="@+id/tituloMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="PÃ¡gina principal!"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/descricao_tituloMain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Clique em play para iniciar"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@+id/tituloMain"
                    app:layout_constraintHorizontal_bias="0.333"
                    app:layout_constraintStart_toStartOf="@+id/tituloMain"
                    app:layout_constraintTop_toBottomOf="@+id/tituloMain" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="127dp"
                    android:layout_height="166dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/medicologo" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="280dp"
                    android:layout_height="238dp"
                    app:srcCompat="@drawable/eu"
                    tools:layout_editor_absoluteX="72dp"
                    tools:layout_editor_absoluteY="225dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>